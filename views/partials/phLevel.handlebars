<div class="row">
    <div class="col-sm">
        <div class="card card-body mb-2 col-sm" style="background-color: #FACC2E;">
            <h4 align="center"> PH LEVEL &nbsp<i class="fa-solid fa-eye-dropper"></i></h4>
            <div class="card card-body mb-2">
                <h6 align="center">Latest values received</h6>
                <div id="latest-pHLevel"></div>
                <hr/>
            </div>
            <div class="card card-body mb-2">
                <h6 align="center">Average</h6>
                <div id="avg-pHLevel"></div>
                <hr/>
            </div>
            <div class="card card-body mb-2">
                <div class="card card-body mb-2">
                <h6 align="center">Values received during last hour</h6>
                    <div class="card card-body mb-2">
                        <div id="lasthour-pHLevel">
                            {{#each values}}
                                <c id="{{this.date}}"><font size=2><{{this.pHLevel}}></font></c>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    <div class="col-sm">
        <div class="card card-body mb-2 col-sm">
            <h4 align="center">ANALYTICS &nbsp<i class="fa-solid fa-chart-bar"></i></h4>
            <canvas id="pHLevel-chart"></canvas>
            <canvas id="pHLevel-chart-predict"></canvas>
        </div>
    </div>
</div>