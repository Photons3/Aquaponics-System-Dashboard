<div class="row">
    <div class="col-sm">
        <div class="card card-body mb-2 col-sm" style="background-color: #F78181;">
            <h4 align="center"> DISSOLVED OXYGEN &nbsp<i class="fa-solid fa-soap"></i></h4>
            <div class="card card-body mb-2">
                <h6 align="center">Latest values received</h6>
                <div id="latest-DOLevel"></div>
                <hr/>
            </div>
            <div class="card card-body mb-2">
                <h6 align="center">Average</h6>
                <div id="avg-DOLevel"></div>
                <hr/>
            </div>
            <div class="card card-body mb-2">
                <div class="card card-body mb-2">
                <h6 align="center">Values received during last hour</h6>
                    <div class="card card-body mb-2">
                        <div id="lasthour-DOLevel">
                            {{#each values}}
                                <c id="{{this.date}}"><font size=2><{{this.DOLevel}} mg/L></font></c>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    
    <div class="col-sm">
        <div class="card card-body mb-2 col-sm">
            <h4 align="center">ANALYTICS &nbsp<i class="fa-solid fa-chart-bar"></i></h4>
            <canvas id="DOLevel-chart"></canvas>
            <canvas id="DOLevel-chart-predict"></canvas>
        </div>
    </div>
</div>